<%- include('./partials/admin') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="text"
            name="nombre"
            placeholder="Nombre"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="descripcion"
            placeholder="Descripcion"
            class="form-control mb-2"
          />
          <input
            type="number"
            name="precio"
            placeholder="Precio"
            class="form-control mb-2"
          />
          <input
          type="file" 
          accept="image/png,image/jpeg" 
          id="urlImagen" 
          name="urlImagen"
          class="form-control mb-2"
          autofocus
        />
        <input
          type="number"
          name="disponibilidad"
          placeholder="Disponibilidad"
          class="form-control mb-2"
        />

          <button type="submit" class="btn btn-info">Guardar Producto</button>
        </form>
      </div>
      <div class="col-md-7">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>ID</td>
              <td>Nombre</td>
              <td>Descripci√≥n</td>
              <td>Precio</td>
              <td>Imagen</td>
              <td>Disponibilidad</td>
              <td>Estado</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %> <% for(var i = 0; i < data.length; i++) {
            %>
            <tr>
              <td><%= data[i].id %></td>
              <td><%= data[i].nombre %></td>
              <td><%= data[i].descripcion %></td>
              <td><%= data[i].precio %></td>
              <td><%= data[i].urlImagen %></td>
              <td><%= data[i].disponibilidad %></td>
              <td><%= data[i].estado %></td>
              <td class="d-flex gap-2">
                <a href="/update/<%= data[i].id %>" class="btn btn-info">
                  Edit
                </a>
                <a href="/delete/<%= data[i].id %>" class="btn btn-danger">
                  Delete
                </a>
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
        </table>
      </div>
      <br>
    </div>
  </div>
</div>
