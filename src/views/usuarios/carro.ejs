<%- include('../partials/main') %>
    <div class="cartas">
    <div class="row">
      <% if (data) { %>
        <% for(var i=0; i < data.length; i++) { %>
          <div class="col-sm-2 mb-6">
            <div class="card h-100 border-dark bg-light" >
              <img src="/uploads/<%= data[i].urlImagen %>" class="card-img-top" alt="<%= data[i].nombre %>">
              <div class="card-body">
                <h5 class="card-title"><%= data[i].nombre %></h5>
                <p class="card-text"><%= data[i].descripcion %></p>
                <p class="card-text">Stock: <%= data[i].disponibilidad %></p>
                <h6 class="card-subtitle mb-2 text-muted">$<%= data[i].precio %></h6>
                <a href="/agregarProducto/<%= data[i].id %>" class="btn btn-success me-2">AÃ±adir al carrito</a>
              </div>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
