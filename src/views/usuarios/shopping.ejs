<%- include('../partials/main') %>
  <div style="padding: 20px;">
    <div class="row" id="cards"></div>
    <h4 >Carrito de compras</h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Cantidad</th>
          <th scope="col">Acción</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody id="items"></tbody>
      <tfoot>
        <tr id="footer">
          <th scope="row" colspan="5">Carrito vacío - ¡Parece que no hay productos disponibles!</th>
        </tr>
      </tfoot>
    </table>
  </div>

  <template id="template-footer">
    <th scope="row" colspan="2">Total productos</th>
    <td>10</td>
    <td>
      <button class="btn btn-danger btn-sm" id="vaciar-carrito">
        Vaciar carrito
      </button>
    </td>
    <td><button id="btn-comprar" class="btn btn-success">Comprar</button></td>
    <td class="font-weight-bold">$<span>5000</span></td>
  </template>

  <template id="template-carrito">
    <tr>
      <th scope="row">id</th>
      <td>Café</td>
      <td>Descripcion</td>
      <td>1</td>
      <td>
        <button class="btn btn-info btn-sm">
          +
        </button>
        <button class="btn btn-danger btn-sm">
          -
        </button>
      </td>
      <td> <span>500</span></td>
    </tr>
  </template>
  <template id="template-card">
        <div class="col-sm-2 mb-6 py-3" style="padding: 20px;">
          <div class="card h-100 border-dark bg-light" >
        <img class="card-img-top">
        <div class="card-body" >
          <h5 class="card-title">Nombre</h5>
          <p class="card-text" style="margin: -10px;" id="">Descripcion</p>
          <p class="card-text" style="margin: -10px;" id="">$0</p>
          <p class="card-text" style="margin: -10px;" id="">Stock:0</p>
          <button class="btn btn-dark" style="margin: -10px;">Añadir al carrito</button>
        </div>
  </template>
</div>
  <script src="/js/mainCarrito.js"></script>