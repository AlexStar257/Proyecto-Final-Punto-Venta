<%- include('../partials/login') %>

    <section class="vh-100 gradient-custom">
        <form action="/login" method="POST">
            <div class="container py-3 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-6.5">
                        <div  class="card bg-dark text-white" style="border-radius: 1rem; opacity: 0.8;-moz-opacity: 0.8;filter: alpha(opacity=80);khtml-opacity: 0.8;">
                            <div class="card-body p-3 text-center">
                                <div class="mb-md-2 mt-md-4 pb-2">
                                    <h2 class="fw-bold mb-2 text-uppercase">Inicio de Sesión</h2>
                                    <p class="text-white-50 mb-2">Introduce tus Datos</p>
                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="email">Correo</label>
                                        <input type="email" id="email" name="email" class="form-control form-control-lg"
                                            required />
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="password">Contraseña</label>
                                        <input type="password" id="password" name="password"
                                            class="form-control form-control-lg" required />
                                    </div>
                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Iniciar
                                        Sesión</button>
                                    <div>
                                        <br>
                                        <p class="mb-0">¿No tienes una cuenta? <a href="/register"
                                                class="text-white-50 fw-bold">Registrarse</a>
                                        </p>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>